{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env", ".env.local", ".env.production", ".env.production.local"],
			"outputs": [".next/**", "!.next/cache/**"],
			"env": ["NEXT_CLIENT_URL, API_SERVER_URL"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"dev": {
			"cache": false,
			"persistent": true,
			"inputs": ["$TURBO_DEFAULT$", ".env", ".env.local", ".env.development", ".env.development.local"],
			"env": ["NEXT_CLIENT_URL, API_SERVER_URL"]
		}
	}
}
